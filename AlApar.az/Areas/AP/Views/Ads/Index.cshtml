@model IEnumerable<AlApar.az.Model.Ad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AP/Views/Shared/_Layout.cshtml";
}

<h2>Aktiv Olunmamış Elanlar</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.OwnerName)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.PinCode)
        </th>



        <th>
            @Html.DisplayNameFor(model => model.VIP)
        </th>




        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>



        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.OwnerName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PinCode)
        </td>



        <td>
            @Html.DisplayFor(modelItem => item.VIP)
        </td>



        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>



        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>


        <td>
            @Html.ActionLink("Duzəlt", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detallar", "Details", new { id = item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }) |
            <a href="@Url.RouteUrl("Default", new { controller= "AdPage" , action= "Index", id= item.Id })"> Elana Get </a>|
            <a href="@Url.Action("AddStartDate", new { id= item.Id })">Elanı Aktivləşdir</a>
        </td>
    </tr>
}

</table>
