
@{
    ViewBag.Title = "Forgot";
}


<!-- Forgot -->
<section id="Forgot">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-xl-12 col-lg-12">
                <center>
                    @if(Session["EmailSent"]!= null)
                    {
                        <label class="warning alert-warning">Email`ə Şifrə Yenilənmə Linki Göndərildi</label>
                    }
                    @if (Session["WrongEmail"] != null)
                    {
                        <label class="alert-danger danger">Daxil Etdiyiniz Email yanlışdır </label>
                    }
                    <form action="@Url.Action("SendEmail", "Sign")" method="post">

                        <h5>Email:</h5>
                        <input type="email" name="Email" id="">
                        <br>
                        <button type="submit" value="" class="btn btn-primary"> Şifrəni Yenilə</button>

                    </form>
                </center>
            </div>
        </div>
    </div>
</section>

@section Forgot{
    <script src="~/Assest/owlcarousel/owl.carousel.min.js"></script>

    <script src="~/Assest/js/Forgot.js"></script>

}